<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFC0CB" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#87CEFA" />

    </LinearLayout>

    <View
        android:id="@+id/sust_symbol"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="colorToAim"
        android:textSize="50sp"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="420dp"
        android:textSize="70sp"
        android:text="S U S T"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:textSize="15sp"
        android:text="power by K_xue"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/my_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:background="@drawable/my_button_background"
        android:gravity="center"
        android:padding="10dp"
        android:text="相机识别"
        android:textSize="35sp"
        android:textColor="#FFFFFF"
        android:drawableBottom="@android:drawable/presence_video_online" />

    <Button
        android:id="@+id/my_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="550dp"
        android:background="@drawable/my_button_background2"
        android:gravity="center"
        android:padding="10dp"
        android:text="照片识别"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:drawableBottom="@android:drawable/ic_menu_slideshow" />


</FrameLayout>