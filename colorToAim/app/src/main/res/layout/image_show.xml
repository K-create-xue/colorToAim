<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="725dp"
        android:adjustViewBounds="true"
        android:background="@color/wathet"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/button_RGB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:text="RGB" />

    <Button
        android:id="@+id/button_HSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HSV"
        android:layout_gravity="right"
        android:layout_marginTop="55dp"/>

    <Button
        android:id="@+id/button_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16进制"
        android:layout_gravity="right"
        android:layout_marginTop="105dp"/>

    <Button
        android:id="@+id/button_mol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="浓度"
        android:layout_gravity="right"
        android:layout_marginTop="155dp"/>


    <View
        android:id="@+id/aim_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@null"
        android:clipToOutline="true"
        android:elevation="4dp"
        android:outlineProvider="bounds" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/fingerprintAuthDrawable"
        android:text="..."
        android:textColor="#2196F3"
        android:textSize="65dp"
        android:textStyle="bold"
        android:layout_gravity="right|bottom"
        app:iconTint="#00BCD4" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_add"
        android:text="..."
        android:textColor="#2196F3"
        android:textSize="65dp"
        android:textStyle="bold"
        android:layout_gravity="left|bottom"
        app:iconTint="#CDDC39" />

    <TextView
        android:id="@+id/textView_show_mol"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:background="#FFFFFF"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="0%"
        android:textSize="30dp" />




</FrameLayout>